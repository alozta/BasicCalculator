<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#C0C0C0"
        >
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="150dp">
        <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id = "@+id/display" android:textColor="#424242" android:gravity="right"
                android:textSize="50dp"/>
        <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id = "@+id/entry" android:gravity="right" android:textColor="#424242"
                android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:background="#424242">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="90dp"
                      android:layout_gravity="center"
                      android:paddingTop="20dp" android:gravity="center">
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/seven"
                    android:text="@string/seven"
                    android:background="#424242"
                    android:textColor="#FFFFFF" android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/eight"
                    android:text="@string/eight"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/nine"
                    android:text="@string/nine"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/div"
                    android:text="@string/div"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="90dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:paddingTop="20dp">
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/four"
                    android:text="@string/four"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/five"
                    android:text="@string/five"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/six"
                    android:text="@string/six"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/mul"
                    android:text="@string/mul"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="90dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:paddingTop="20dp">
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/one"
                    android:text="@string/one"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/two"
                    android:text="@string/two"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/three"
                    android:text="@string/three"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="match_parent"
                    android:id = "@+id/minus"
                    android:text="@string/minus"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="90dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:paddingTop="20dp">
            <Button
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/clear"
                    android:text="@string/clear"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/dot"
                    android:text="@string/dot"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="105dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/zero"
                    android:text="@string/zero"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            <Button
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/equal"
                    android:text="@string/equal"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"/>
            <Button
                    android:layout_width="93.75dp"
                    android:layout_height="fill_parent"
                    android:id = "@+id/plus"
                    android:text="@string/plus"
                    android:background="#424242"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

